{
  "name": "oare",
  "private": true,
  "scripts": {
    "start": "cd packages/backend && yarn start",
    "lint": "yarn workspaces run lint",
    "lint:fix": "cd packages/frontend && yarn lint:fix",
    "prettier:vue": "prettier --write **/*.{vue,js,ts} --config packages/frontend/.prettierrc",
    "build": "./build.sh",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "serve": "cd packages/frontend && yarn serve",
    "test": "cd packages/frontend && yarn test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  }
}
