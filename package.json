{
  "name": "oare",
  "private": true,
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"NODE_ENV=development OARE_JWT_TOKEN=secret yarn server\" \"yarn client\"",
    "lint": "yarn workspace @oare/frontend run lint",
    "lint:fix": "yarn workspace @oare/frontend lint:fix",
    "build": "./build.sh",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "client": "yarn workspace @oare/frontend serve",
    "server": "yarn workspace @oare/backend dev",
    "test": "yarn workspace @oare/frontend test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  }
}
