{
  "root": true,

  "env": {
    "node": true
  },

  "extends": ["plugin:vue/essential", "eslint:recommended", "@vue/typescript"],

  "rules": {
    "no-console": "off",
    "no-debugger": "off",
    "quotes": ["error", "single", { "avoidEscape": true }]
  },

  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },

  "overrides": [
    {
      "files": [
        "**/__tests__/*.{j,t}s?(x)",
        "**/tests/unit/**/*.spec.{j,t}s?(x)"
      ],
      "env": {
        "jest": true
      }
    }
  ],

  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".vue", ".ts"]
      }
    }
  }
}
